<h4>Add an item</h4>
<%= form_for [user, item] do |f| %>
  <div class="form-group">
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Enter a new to-do item" %>
  </div>
  <%= f.submit "Submit Item", class: 'btn btn-default pull-right' %>
<% end %>
